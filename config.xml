<?xml version='1.0' encoding='utf-8'?>
<widget version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bacchus Diary</name>
    <description>
        Bacchus Diary Mobile Client
    </description>
    <author email="bacchus-diary@fathens.org" href="http://www.fathens.org/">
        Office fathens
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="fullscreen" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="iosPersistentFileLocation" value="Library" />
    <preference name="deployment-target" value="8.0" />
    <preference name="SplashScreenDelay" value="30000" />
    <preference name="AutoHideSplashScreen" value="false" />

    <engine name='android' spec='~5.0.0'/>
    <engine name='ios' spec='~3.9.2'/>
</widget>
